<div class="container container-min">
	<%= form_for(@user) do |f| %>
		<div class="form-group">
			<%= f.label :username %>
			<%= f.text_field :username, placeholder: "Enter username", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, placeholder: "Enter email", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.password_field :password, placeholder: "Enter password", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit(@user.new_record? ? "Sign Up" : "Edit User" , class: "btn btn-lg btn-info") %>
		</div>
	<% end %>
</div>
