<div class="container">
  <%= render 'messages' %>
  <h1>Listing Posts</h1>
    <div class="row">
      <% @posts.each do |post| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= link_to(post) do %>
              <%= image_tag("image_upload.png", :alt => "images thumbnail", :class => "img-responsive") %>
              <% end %>
              <div class="caption">
                <h3><td><%= link_to post.title, post %></td></h3>
                <p>
                  <small>Posted by: <%= link_to post.user.username, user_path(post.user) %> - <em><%= time_ago_in_words(post.created_at) %> ago</em></small>
                </p>
                <p><%= truncate(post.content, length: 100) %></p>
                <p>
                  <%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-success" %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
                </p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  
  <br>
  
  <%= link_to 'New Post', new_post_path %>
</div>

